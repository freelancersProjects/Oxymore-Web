{
  "name": "oxymore",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "desktop"
  ],
  "scripts": {
    "dev:admin": "npm run dev --workspace=oxymore-admin",
    "dev:app": "npm run dev --workspace=oxymore-app",
    "dev:site": "npm run dev --workspace=oxymore-site",
    "dev:back": "npm run dev --prefix back",
    "dev:templates": "npm run dev --prefix apps/templates/server",
    "dev:desktop": "npm run electron:dev --workspace=@oxymore/desktop",
    "dev": "concurrently \"npm run dev:back\" \"npm run dev:admin\" \"npm run dev:app\" \"npm run dev:site\"",
    "build": "npm run build --workspace=@oxymore/ui",
    "build:admin": "npm run build --workspace=oxymore-admin",
    "build:app": "npm run build --workspace=oxymore-app",
    "build:site": "npm run build --workspace=oxymore-site",
    "build:back": "npm run build --prefix back",
    "lint:admin": "npm run lint --workspace=oxymore-admin --fix",
    "lint:app": "npm run lint --workspace=oxymore-app --fix",
    "lint:site": "npm run lint --workspace=oxymore-site --fix",
    "lint:back": "npm run lint --prefix back",
    "lint:scss:site": "npm run lint:scss --workspace=oxymore-site --fix",
    "lint:scss:app": "npm run lint:scss --workspace=oxymore-app --fix",
    "lint:scss:all": "npm run lint:scss:site && npm run lint:scss:app"
  },
  "devDependencies": {
    "@stylistic/stylelint-plugin": "^4.0.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.1",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "sass-embedded": "^1.89.2",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-scss": "^6.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hello-pangea/dnd": "^18.0.1",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "@tiptap/react": "^3.4.1",
    "@types/canvas-confetti": "^1.9.0",
    "canvas-confetti": "^1.9.3",
    "fs-extra": "^11.3.2",
    "lucide-react": "^0.522.0",
    "react-router-dom": "^7.9.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
}
